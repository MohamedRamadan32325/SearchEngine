@model IEnumerable<SearchResult>

<!DOCTYPE html>
<html>
<head>
    <title>Modern Search Engine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .search-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .search-title {
            color: #2c3e50;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
        }

        .search-box {
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            border-radius: 30px;
            overflow: hidden;
        }

        .search-input {
            border: none;
            padding: 1.2rem 1.5rem;
            font-size: 1.1rem;
        }

            .search-input:focus {
                box-shadow: none;
            }

        .search-button {
            padding: 0.7rem 2rem;
            border-radius: 30px;
            margin: 5px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .search-button:hover {
                transform: translateY(-2px);
            }

        .result-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
        }

            .result-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.12);
            }

        .result-url {
            color: #3498db;
            text-decoration: none;
            font-weight: 600;
        }

            .result-url:hover {
                color: #2980b9;
            }

        .result-stats {
            color: #7f8c8d;
            font-size: 0.9rem;
        }

        .no-results {
            text-align: center;
            padding: 3rem;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <div class="container mt-5 search-container">
        <h1 class="search-title">
            <i class="fas fa-search me-2"></i>Bing
        </h1>

        <form method="get" action="@Url.Action("Search", "Search")" class="my-4">
            <div class="input-group search-box">
                <input type="text"
                       name="query"
                       class="form-control search-input"
                       placeholder="What are you looking for?"
                       value="@ViewBag.CurrentQuery"
                       required
                       autocomplete="off">
                <button type="submit" class="btn btn-primary search-button">
                    <i class="fas fa-search me-2"></i>Search
                </button>
            </div>
        </form>

        @if (Model != null && Model.Any())
        {
            <div class="results mt-4">
                <p class="text-muted mb-4">Found </p>
                @foreach (var result in Model)
                {
                    <div class="card result-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@result.URL" target="_blank" class="result-url">
                                    @result.URL
                                    <i class="fas fa-external-link-alt ms-2 small"></i>
                                </a>
                            </h5>
                            <p class="card-text result-stats">
                                <i class="fas fa-file-alt me-2"></i>Word Count: @result.WordCount
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else if (Context.Request.Query["query"].Count > 0)
        {
            <div class="alert alert-info mt-4 text-center">
                <i class="fas fa-search-minus mb-2" style="font-size: 2rem;"></i>
                <h4 class="alert-heading">No Results Found</h4>
                <p class="mb-0">Sorry, we couldn't find any results matching your search query.</p>
                <p>Please try different keywords or refine your search.</p>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>